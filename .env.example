# RFP Agent System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM Configuration
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here

# ============================================================================
# Search APIs (Optional - for web scraping)
# ============================================================================
SERPAPI_KEY=your_serpapi_key_here
FIRECRAWL_API_KEY=your_firecrawl_key_here

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///data/rfp_system.db

# ============================================================================
# Redis Cache (Optional - falls back to in-memory)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Authentication
# ============================================================================
# Admin API token (full access, no rate limits)
ADMIN_API_TOKEN=your_secure_admin_token_here

# User API tokens (comma-separated for multiple users)
USER_API_TOKENS=user_token_1,user_token_2,user_token_3

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_ENV=production

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/agent_activity.log

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable specific features
ENABLE_WEB_SCRAPING=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_QUANTITY_EXTRACTION=true
ENABLE_STRUCTURED_PARSING=true
ENABLE_VALIDATION=true

# ============================================================================
# Performance Tuning
# ============================================================================
# Database connection pool
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20

# Cache TTL (seconds)
CACHE_TTL=3600

# Retry configuration
MAX_RETRY_ATTEMPTS=3
RETRY_MIN_WAIT=2
RETRY_MAX_WAIT=10

# Circuit breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# ============================================================================
# Frontend Configuration (Streamlit)
# ============================================================================
API_BASE_URL=http://127.0.0.1:5000/api

# ============================================================================
# Monitoring & Metrics
# ============================================================================
# Prometheus metrics endpoint is always available at /metrics
METRICS_ENABLED=true

# ============================================================================
# Security
# ============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# ============================================================================
# Development Settings
# ============================================================================
# Use mock data for testing (bypasses external APIs)
USE_MOCK_DATA=false

# Enable detailed debug logging
DEBUG_MODE=false
